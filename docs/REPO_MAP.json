{
    "project_name": "smol-fe",
    "description": "Frontend for Smol generic music NFT generator",
    "stack": {
        "framework": "Astro 5",
        "ui": "Svelte 5 (Runes)",
        "styling": "Tailwind CSS 4",
        "package_manager": "pnpm",
        "blockchain": "Stellar (Soroban)",
        "auth": "PasskeyKit (WebAuthn)",
        "relayer": "OpenZeppelin Channels"
    },
    "structure": {
        "directories": {
            "docs": {
                "description": "Canonical documentation",
                "entry_point": "docs/INDEX.md",
                "archive": "docs/archive"
            },
            "src": {
                "description": "Application source code",
                "subdirectories": {
                    "components": "Svelte UI components",
                    "layouts": "Astro layouts",
                    "pages": "Astro interactions and routes",
                    "services": "Business logic and API clients",
                    "stores": "Global reactive state (Svelte 5 runes)",
                    "styles": "Global CSS and Tailwind config",
                    "types": "TypeScript definitions",
                    "utils": "Helpers and SDK wrappers"
                }
            },
            "ext": {
                "description": "Autogenerated Soroban SDKs (Do Not Edit Manually)",
                "subdirectories": {
                    "smol-sdk": "Main NFT/AMM contract bindings",
                    "comet-sdk": "Defi primitive bindings"
                }
            },
            "public": {
                "description": "Static assets",
                "subdirectories": {
                    "data": "JSON snapshots and static data"
                }
            }
        },
        "key_files": {
            "README.md": "Project root overview",
            "wrangler.toml": "Cloudflare Pages configuration",
            "astro.config.mjs": "Astro configuration",
            "tailwind.config.mjs": "Tailwind configuration",
            "package.json": "Dependencies and scripts"
        }
    },
    "hotspots": {
        "auth": [
            "src/utils/passkey-kit.ts",
            "src/stores/user.svelte.ts",
            "src/hooks/useAuthentication.ts"
        ],
        "minting": [
            "src/utils/mint.ts",
            "src/hooks/useMixtapeMinting.ts"
        ],
        "state": [
            "src/stores/user.svelte.ts",
            "src/stores/audio.svelte.ts"
        ]
    },
    "rules": {
        "ports": {
            "dev": 4321
        },
        "commands": {
            "dev": "pnpm dev",
            "build": "pnpm build",
            "test": "pnpm test",
            "check": "pnpm check"
        }
    }
}